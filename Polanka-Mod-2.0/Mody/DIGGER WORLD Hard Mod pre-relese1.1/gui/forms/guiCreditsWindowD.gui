function CreditsWindowDDlg::onWake(%this)
{
	%text = "<font:Open Sans:32><color:898989><br><font:Open Sans Bold:32><color:ffffff>Life is Feudal Â© Bitbox Ltd.\n";
	CreditsWindowDText.setText(%text);
	%this.loadCreditsFromFile();
}

function CreditsWindowDDlg::loadCreditsFromFile(%this)
{
   %creditsFile = "DONAT";
	if(!isFile(%creditsFile))
	   return;
   new FileObject(creditsLoader);
   if(!creditsLoader.openForRead(%creditsFile))
   {
      creditsLoader.delete();
      return;
	}
	%text = "";
	while(!creditsLoader.isEOF())
	{
	   %text = %text NL creditsLoader.readLine();
	}
	creditsLoader.delete();
	CreditsWindowDText.setText(%text);
}

function showCreditsWindowD()
{
	if (!isObject(CreditsWindowD))
	{
		createCreditsWindowD();
	}

	if (isObject(CreditsWindowD))
	{
		Canvas.pushDialog(CreditsWindowD);
	}
}

function closeCreditsWindowD()
{
	if (isObject(CreditsWindowD))
	{
		Canvas.popDialog(CreditsWindowD);
		CreditsWindowD.safeDeleteObject();
	}
}

function CreditsWindowDText::onURL(%this, %url) 
{
	openSteamURL(%url);
}
